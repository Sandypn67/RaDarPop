<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/BookListFragment">

    <fragment
        android:id="@+id/Option"
        android:name="com.example.radarpop.data.template.liste.GhibliListFrag"
        android:label="accueil"
        tools:layout="@layout/fragment_ghibli_list">

        <action
            android:id="@+id/navigateToFirstPage"
            app:destination="@id/BookListFragment" />
    </fragment>

    <fragment
        android:id="@+id/BookListFragment"
        android:name="com.example.radarpop.data.template.liste.GhibliListFrag"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_ghibli_list">

        <action
            android:id="@+id/navigateToBookDetailFragment"
            app:destination="@id/BookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/BookDetailFragment"
        android:name="com.example.radarpop.data.template.details.BookDetailFrag"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_ghibli_details">

        <action
            android:id="@+id/navigateToGhibliListFragment"
            app:destination="@id/BookListFragment" />
    </fragment>


</navigation>